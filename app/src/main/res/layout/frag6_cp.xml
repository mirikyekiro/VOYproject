<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_editor_absoluteX="1dp"
    app:layout_editor_absoluteY="1dp"
    tools:context=".StartScreen.FragmentSix"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Выберите тип"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp">
        </TextView>

        <ToggleButton
            android:id="@+id/pregnancy1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textOn="Беременность (I триместр)"
            android:textOff="Беременность (I триместр)"
            android:padding="16dp"
            android:button="@color/white"
            android:background="@drawable/radio_selector"
            android:elevation="4dp"
            android:layout_gravity="center"
            android:layout_margin="5dp">
        </ToggleButton>

        <ToggleButton
            android:id="@+id/pregnancy2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textOn="Беременность (II триместр)"
            android:textOff="Беременность (II триместр)"
            android:padding="16dp"
            android:button="@color/white"
            android:background="@drawable/radio_selector"
            android:elevation="4dp"
            android:layout_gravity="center"
            android:layout_margin="5dp">
        </ToggleButton>

        <ToggleButton
            android:id="@+id/pregnancy3"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textOn="Беременность (III триместр)"
            android:textOff="Беременность (III триместр)"
            android:padding="16dp"
            android:button="@color/white"
            android:background="@drawable/radio_selector"
            android:elevation="4dp"
            android:layout_gravity="center"
            android:layout_margin="5dp">
        </ToggleButton>

        <ToggleButton
            android:id="@+id/hbp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textOn="ХБП/ХПН (требуется консультация у специалиста)"
            android:textOff="ХБП/ХПН (требуется консультация у специалиста)"
            android:padding="16dp"
            android:button="@color/white"
            android:background="@drawable/radio_selector"
            android:elevation="4dp"
            android:layout_gravity="center"
            android:layout_margin="5dp">
        </ToggleButton>

        <ToggleButton
            android:id="@+id/gsd"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textOn="Гистационный диабет (у беременных)"
            android:textOff="Гистационный диабет (у беременных)"
            android:padding="16dp"
            android:button="@color/white"
            android:background="@drawable/radio_selector"
            android:elevation="4dp"
            android:layout_gravity="center"
            android:layout_margin="5dp">
        </ToggleButton>

            <ToggleButton
                android:id="@+id/diabet1"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textOn="Диабет (I)"
                android:textOff="Диабет (I)"
                android:padding="16dp"
                android:button="@color/white"
                android:background="@drawable/radio_selector"
                android:elevation="4dp"
                android:layout_gravity="center"
                android:layout_margin="5dp">
            </ToggleButton>

            <ToggleButton
                android:id="@+id/diabet2"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textOn="Диабет (II)"
                android:textOff="Диабет (II)"
                android:padding="16dp"
                android:button="@color/white"
                android:background="@drawable/radio_selector"
                android:elevation="4dp"
                android:layout_gravity="center"
                android:layout_margin="5dp">
            </ToggleButton>

            <ToggleButton
                android:id="@+id/diabet3"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textOn="Диабет (III)"
                android:textOff="Диабет (III)"
                android:padding="16dp"
                android:button="@color/white"
                android:background="@drawable/radio_selector"
                android:elevation="4dp"
                android:layout_gravity="center"
                android:layout_margin="5dp">
            </ToggleButton>


        <Button
            android:id="@+id/btnStart"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Начать"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:backgroundTint="#FFEFCD25"
            android:layout_gravity="center"
            android:layout_marginTop="25dp">

        </Button>

    </LinearLayout>

</ScrollView>