<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".StartScreen.FragmentThree"
    android:background="@color/white">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Выберите тип"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:layout_marginTop="100dp">
        </TextView>

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="50dp">

            <RadioButton
                android:id="@+id/loseWeight"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Сбросить вес"
                android:padding="16dp"
                android:button="@color/white"
                android:background="@drawable/radio_selector"
                android:elevation="4dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:checked="true">
            </RadioButton>

            <RadioButton
                android:id="@+id/gainWeight"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Набрать вес"
                android:padding="16dp"
                android:button="@color/white"
                android:background="@drawable/radio_selector"
                android:elevation="4dp"
                android:layout_gravity="center"
                android:layout_margin="10dp">
            </RadioButton>

            <RadioButton
                android:id="@+id/saveWeight"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Сохранить вес"
                android:padding="16dp"
                android:button="@color/white"
                android:background="@drawable/radio_selector"
                android:elevation="4dp"
                android:layout_gravity="center">
            </RadioButton>
        </RadioGroup>

        <Button
            android:id="@+id/btnSaveType"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Начать"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:backgroundTint="#FFEFCD25"
            android:layout_gravity="center"
            android:layout_marginTop="50dp">

        </Button>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>