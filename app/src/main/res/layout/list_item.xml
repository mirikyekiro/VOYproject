<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10sp"
    android:layout_marginStart="10sp"
    android:layout_marginEnd="10sp"
    android:descendantFocusability="blocksDescendants"
    android:id="@+id/mainLayout">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants">

        <TextView
            android:id="@+id/listName"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:text="Name food"
            android:textStyle="bold"
            android:textSize="21sp"
            android:layout_marginTop="10sp"
            android:layout_marginStart="10sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/listGramm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginStart="10sp"
            android:layout_marginBottom="10sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/listName"/>

        <TextView
            android:id="@+id/listKcal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="250rrfk"
            android:layout_marginEnd="10sp"
            android:layout_toEndOf="@id/listName"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/btnAddProduct"/>

        <Button
            android:id="@+id/btnAddProduct"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginEnd="10sp"
            android:layout_toEndOf="@id/listName"
            android:background="@drawable/add_circle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>