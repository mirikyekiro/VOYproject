<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_editor_absoluteX="1dp"
    app:layout_editor_absoluteY="1dp"
    android:fillViewport="true"
    tools:context=".MainMenu.FragmentProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:verticalScrollbarPosition="right"
        android:orientation="vertical"
        android:background="#FFF9FCFF">

    <!-- TODO: Update blank fragment layout -->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Профиль"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="15sp"/>

            <Button
                android:id="@+id/btnChangeProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="Изменить"
                android:textSize="14sp"
                android:layout_marginEnd="15sp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_margin="10sp"
        android:id="@+id/name"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:textAlignment="center">

    </TextView>

    <View
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:background="@drawable/logo_profile"
        android:layout_gravity="center">

    </View>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/age"
            android:layout_width="75sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"
            android:singleLine="false"
            android:text="Возраст"
            android:textAlignment="center"
            android:textSize="18sp">

        </TextView>

        <TextView
            android:id="@+id/height"
            android:layout_width="75sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"
            android:singleLine="false"
            android:text="Рост"
            android:textAlignment="center"
            android:textSize="18sp">

        </TextView>

        <TextView
            android:id="@+id/weight"
            android:layout_width="55sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"
            android:singleLine="false"
            android:text="Вес"
            android:textAlignment="center"
            android:textSize="18sp">

        </TextView>

        <TextView
            android:id="@+id/sex"
            android:layout_width="75sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"
            android:singleLine="false"
            android:text="Пол"
            android:textAlignment="center"
            android:textSize="18sp">

        </TextView>

    </LinearLayout>

    <TextView
        android:id="@+id/typeProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Тип:"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:layout_margin="15sp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/lifestyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Образ жизни:"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:layout_margin="15sp"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Желаемый вес:"
        android:layout_margin="20sp"
        android:id="@+id/weightDesired"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:visibility="invisible"
        android:textAlignment="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Тип:"
            android:layout_margin="20sp"
            android:id="@+id/typePosition"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:textAlignment="center"/>

    <Button
        android:id="@+id/deleteProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Удалить профиль"
        android:backgroundTint="#9F0000"
        android:textSize="16sp"
        android:layout_gravity="center"/>



    </LinearLayout>

</ScrollView>